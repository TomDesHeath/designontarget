name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: 'pages'
  cancel-in-progress: true

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    env:
      NODE_VERSION: '20'
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: npm

      - name: Install dependencies
        run: npm ci

      - name: Build site (supports Create React App or Vite)
        # This step runs the project's build script, then copies the output from either "build" (CRA) or "dist" (Vite)
        run: |
          npm run build
          if [ -d "dist" ]; then
            echo "Found Vite output in dist — copying to _site"
            rm -rf _site || true
            cp -R dist _site
          elif [ -d "build" ]; then
            echo "Found CRA output in build — copying to _site"
            rm -rf _site || true
            cp -R build _site
          else
            echo "ERROR: No build output folder found (expected 'dist' or 'build')"
            ls -la
            exit 1
          fi

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: _site

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
